set nocompatible
set backspace=indent,eol,start
set autoindent
set history=100
set ruler
set mouse=a
set ttymouse=xterm2
"set spell
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4
"set smartindent
set smarttab
set incsearch
set foldmethod=marker
"set nofoldenable
set hlsearch
set linebreak
set visualbell t_vb=
set number
set textwidth=0
set ignorecase
set smartcase
set encoding=utf8
set wildmenu
set hidden
set laststatus=2
"set flp=^\\s*[0-9*+\\-]\\+[\\]:.)}\\t\ ]\\s*
set fo+=n
syntax on

map \p i(<Esc>ea)<Esc>
map \c i{<Esc>ea}<Esc>
" map <C-T> :tabnew<CR>

map <Leader>vs :set spell!<CR>
map <Leader>va :set ai!<CR>
map <Leader>vw :set wrap!<CR>
map <Leader>vr :set lbr!<CR>
map <Leader>vn :set nu!<CR>
map <Leader>vl :set list!<CR>
map <Leader>vx :set tw=

map <S-Left>    :bp<CR>
map <S-Right>   :bn<CR>
map <C-S-Left>  :tabp<CR>
map <C-S-Right> :tabn<CR>

map <Leader>nt :NERDTreeToggle<CR>
map <Leader>ft :FufFile<CR>
map <Leader>fb :FufBuffer<CR>

filetype plugin on
filetype indent on

autocmd FileType javascript set omnifunc=javascriptcomplete#CompleteJS
autocmd FileType html set omnifunc=htmlcomplete#CompleteTags
autocmd FileType xml set omnifunc=xmlcomplete#CompleteTags
autocmd FileType css set omnifunc=csscomplete#CompleteCSS
autocmd FileType php set omnifunc=phpcomplete#CompletePHP
autocmd FileType python set omnifunc=pythoncomplete#Complete
autocmd FileType c,cpp,ragel set omnifunc=ccomplete#Complete
autocmd FileType ruby set omnifunc=rubycomplete#Complete
au FileType ruby set shiftwidth=2
au FileType ruby set softtabstop=2

au! BufRead,BufNewFile *.haml         setfiletype haml
au! BufRead,BufNewFile *.sass         setfiletype sass
autocmd BufNewFile,BufRead COMMIT_EDITMSG set filetype=gitcommit


au BufRead,BufNewFile * match ErrorMsg  /[ \t]\+$/
"au BufRead,BufNewFile * match ErrorMsg   /\%>80v.\+/

" Things to think about when using xterm
if has("xterm_clipboard")
    behave xterm
    set t_Co=256
    colorscheme github256
else
    set t_Co=16
    set paste
    set clipboard+=unnamed
endif

function! GnuIndent()
    setlocal cinoptions=>4,n-2,{2,^-2,:2,=2,g0,h2,p5,t0,+2,(0,u0,w1,m1
    setlocal shiftwidth=2
    setlocal tabstop=8
endfunction

