set nocompatible
set backspace=indent,eol,start
set autoindent
set history=100
set ruler
set mouse=a
set ttymouse=xterm2
"set spell
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4
"set smartindent
set smarttab
set incsearch
set foldmethod=marker
"set nofoldenable
set hlsearch
set linebreak
set visualbell
set number
set paste
set textwidth=0
set clipboard+=unnamed
set ignorecase
set encoding=utf8
set wildmenu
syntax on

map \p i(<Esc>ea)<Esc>
map \c i{<Esc>ea}<Esc>
" map <C-T> :tabnew<CR>

map <Leader>vs :set spell!<CR>
map <Leader>va :set ai!<CR>
map <Leader>vw :set wrap!<CR>
map <Leader>vr :set lbr!<CR>
map <Leader>vn :set nu!<CR>
map <Leader>vl :set list!<CR>
map <Leader>vx :set tw=

map <S-Left>    :bp<CR>
map <S-Right>   :bn<CR>
map <C-S-Left>  :tabp<CR>
map <C-S-Right> :tabn<CR>

map <Leader>b :NERDTreeToggle<CR>
map <Leader>t :FuzzyFinderTextMate<CR>

filetype plugin on
filetype indent on

autocmd FileType javascript set omnifunc=javascriptcomplete#CompleteJS
autocmd FileType html set omnifunc=htmlcomplete#CompleteTags
autocmd FileType xml set omnifunc=xmlcomplete#CompleteTags
autocmd FileType css set omnifunc=csscomplete#CompleteCSS
autocmd FileType php set omnifunc=phpcomplete#CompletePHP
autocmd FileType python set omnifunc=pythoncomplete#Complete
autocmd FileType c,cpp set omnifunc=ccomplete#Complete
autocmd FileType ruby set omnifunc=rubycomplete#Complete
au FileType ruby set shiftwidth=2
au FileType ruby set softtabstop=2

au! BufRead,BufNewFile *.haml         setfiletype haml
au! BufRead,BufNewFile *.sass         setfiletype sass
autocmd BufNewFile,BufRead COMMIT_EDITMSG set filetype=gitcommit

au BufRead,BufNewFile *         match Error     /[ \t]\+$/
" au BufRead,BufNewFile *         match ErrorMsg  /\%>80v.\+/

set t_Co=16
colo ir_black
