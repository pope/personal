# .bashrc

# Source the real profile
if [ -f ~/.bashenv ]; then
    source ~/.bashenv
fi

# Source global definitions
if [ -f /etc/bashrc ]; then
    source /etc/bashrc
fi

# Make bash check it's window size after a process completes
shopt -s checkwinsize

